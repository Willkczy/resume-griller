# Resume Griller Environment Configuration

# App Settings
DEBUG=true

# LLM Configuration
LLM_MODE=api
LLM_PROVIDER=groq

# API Keys (填入你的 key)
GOOGLE_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GROQ_API_KEY=

# Model names
GEMINI_MODEL=gemini-2.5-flash
ANTHROPIC_MODEL=claude-sonnet-4-20250514
OPENAI_MODEL=gpt-4o
GROQ_MODEL=llama-3.3-70b-versatile

# Custom Model settings
CUSTOM_MODEL_ENABLED=true
CUSTOM_MODEL_URL=http://localhost:8001/v1
CUSTOM_MODEL_NAME=mistralai/Mistral-7B-Instruct-v0.2
CUSTOM_MODEL_TIMEOUT=120

# RAG Settings
CHROMA_PERSIST_DIR=./data/chromadb
EMBEDDING_MODEL=all-MiniLM-L6-v2

# File Upload
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE=10485760

# Voice Services
DEEPGRAM_API_KEY=
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# Voice Settings
VOICE_ENABLED=true
STT_PROVIDER=deepgram
TTS_PROVIDER=elevenlabs


# Database
DATABASE_URL=sqlite+aiosqlite:///./data/resume_griller.db