# ===========================================
# Resume Griller - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ----- LLM Configuration -----
# Mode: "api" (use Claude/GPT) or "local" (use fine-tuned model)
LLM_MODE=api

# API Provider (when LLM_MODE=api): "anthropic" or "openai"
LLM_PROVIDER=anthropic

# API Keys
ANTHROPIC_API_KEY=sk-ant-your-key-here
OPENAI_API_KEY=sk-your-key-here

# Local Model Path (when LLM_MODE=local)
LOCAL_MODEL_PATH=./ml/models/exported/resume-griller-lora

# ----- Speech Services -----
DEEPGRAM_API_KEY=your-deepgram-key
ELEVENLABS_API_KEY=your-elevenlabs-key

# ----- Backend -----
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DATABASE_URL=sqlite:///./resume_griller.db
DEBUG=true

# ----- Frontend -----
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
